<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/preto</item>
        <item name="colorPrimaryDark">@color/cinza_escuro</item>
        <item name="colorAccent">@color/vermelho</item>

        <!-- Customize your theme here. -->
        <!--<item name="android:listViewStyle">@style/ListView</item>-->
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <!--<item name="android:background">@color/cinza_escuro</item>-->
        <!--<item name="android:cacheColorHint">#ffffff</item>-->
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">#333333</item>
        <!--<item name="android:fadingEdge">horizontal</item>-->
    </style>

    <style name="BotoesMenu">
        <item name="android:background">@drawable/botao_squared</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="Botao">
        <item name="android:background">@drawable/botao_round</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="Spinner">
        <item name="android:background">@drawable/spinner_branco</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="form_label">
        <item name="android:background">@color/harbor_hat</item>
    </style>

    <style name="background_principal">
        <item name="android:background">@color/cinza_escuro</item>
    </style>

    <style name="toolbar">
        <item name="android:background">@color/preto</item>
        <item name="android:textColor">@color/branco</item>
        <!--<item name="android:textColorPrimary">@color/branco</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
